<div class="page-header">
  <h1>Ranking</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Rank</th>
    <th>Score</th>
    <th>User</th>
    <th>Username</th>
    <th>Time Ago</th>
    <th>Total Time Wasted</th>
  </tr>
  </thead>
  <tbody>
  <% @rankings.each_with_index do |user, rank| %>
    <tr>
      <td><%= rank %></td>
      <td><%= user.best_game.score %></td>
      <td><%= user.fullname %></td>
      <td><%= user.username %></td>
      <td><%= time_ago_in_words(user.best_game.created_at) %></td>
      <td><%= distance_of_time_in_words(0, user.time_wasted, include_seconds: true) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
